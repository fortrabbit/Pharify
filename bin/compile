#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

$rootDir = realpath(__DIR__. '/..');
$pharify = new Pharify\Console();
$input   = new Symfony\Component\Console\Input\ArgvInput(array(
    $_SERVER['argv'][0],
    'create',
    '-d', $rootDir,
    '-p', 'vendor',
    '-p', 'src',
    '-s', 'stub.php',
    '-w',
    'pharify'
));
$pharify->run($input);